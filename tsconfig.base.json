{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "@shared/language": ["libs/shared/language/src/index.ts"],
      "@shared/state-management": ["libs/shared/state-management/src/index.ts"],
      "@shared/app-config": ["libs/shared/app-config/src/index.ts"],
      "@admin/core/ui": ["libs/admin/core/ui/src/index.ts"],
      "@admin/auth/login/ui": ["libs/admin/auth/login/ui/src/index.ts"],
      "@shared/auth/login/ui": ["libs/shared/auth/login/ui/src/index.ts"],
      "@shared/auth/forgot-password/ui": ["libs/shared/auth/forgot-password/ui/src/index.ts"],
      "@shared/auth/reset-password/ui": ["libs/shared/auth/reset-password/ui/src/index.ts"],
      "@admin/auth/login/feature": ["libs/admin/auth/login/feature/src/index.ts"],
      "@admin/core/feature": ["libs/admin/core/feature/src/index.ts"],
      "@shared/api": ["libs/shared/api/src/index.ts"],
      "@shared/util": ["libs/shared/util/src/index.ts"],
      "@admin/auth/forgot-password/ui": ["libs/admin/auth/forgot-password/ui/src/index.ts"],
      "@admin/auth/reset-password/ui": ["libs/admin/auth/reset-password/ui/src/index.ts"],
      "@admin/auth/reset-password/feature": ["libs/admin/auth/reset-password/feature/src/index.ts"],
      "@admin/auth/forgot-password/feature": [
        "libs/admin/auth/forgot-password/feature/src/index.ts"
      ],
      "@shared/auth/login/data-access": ["libs/shared/auth/login/data-access/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
